<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.sherif.example.imageuploader"
    android:versionCode="1"
    android:versionName="1" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" tools:ignore="AllowBackup">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageUploaderActivity" />
        <activity
            android:name=".ImageUploaderActivitySupport" />
        <activity
            android:name=".ActivityForFragment" />
        <activity
            android:name=".ActivityForFragmentSupport" />
        <activity
            android:name=".ImageUploaderActivityVideo" />
        <activity
            android:name=".ImageUploaderActivitySupportVideo" />
        <activity
            android:name=".ActivityForFragmentVideo" />
        <activity
            android:name=".ActivityForFragmentSupportVideo" />
	</application>

</manifest>